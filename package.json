{
  "name": "spekai",
  "displayName": "SpekAi",
  "description": "Test OpenAPI specifications with a React-based UI",
  "version": "0.2.0",
  "publisher": "BitsPlus",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:spekai.openTester"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spekai.openTester",
        "title": "Open SpekAi Tester",
        "category": "SpekAi"
      }
    ],
    "configuration": {
      "title": "SpekAi",
      "properties": {
        "spekai.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic Claude API key for generating realistic test data",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-ui": "cd ui && npm run build",
    "dev": "concurrently \"npm run watch\" \"cd ui && npm run dev\""
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.60.0",
    "concurrently": "^7.6.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
