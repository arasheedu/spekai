{
  "name": "spekai",
  "displayName": "SpekAi",
  "description": "Test OpenAPI specifications with a React-based UI",
  "version": "0.2.3",
  "publisher": "BitsPlus",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "openapi",
    "swagger",
    "api",
    "testing",
    "rest",
    "http",
    "client",
    "mtls",
    "yaml",
    "json",
    "postman",
    "insomnia",
    "api-testing",
    "openapi-testing",
    "swagger-testing",
    "http-client",
    "rest-client",
    "api-client",
    "certificate",
    "authentication"
  ],
  "activationEvents": [
    "onCommand:spekai.openTester"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spekai.openTester",
        "title": "Open SpekAi Tester",
        "category": "SpekAi"
      }
    ],
    "configuration": {
      "title": "SpekAi",
      "properties": {
        "spekai.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic Claude API key for generating realistic test data",
          "scope": "application"
        },
        "spekai.aiProvider": {
          "type": "string",
          "enum": ["auto", "claude"],
          "default": "auto",
          "description": "AI provider preference for JSON generation. 'auto' uses Claude if configured, otherwise manual generation",
          "scope": "application"
        },
        "spekai.enableFallback": {
          "type": "boolean",
          "default": true,
          "description": "Allow fallback to manual generation when Claude is unavailable",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-ui": "cd ui && npm run build",
    "dev": "concurrently \"npm run watch\" \"cd ui && npm run dev\""
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.60.0",
    "concurrently": "^7.6.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arasheedu/spekai.git"
  },
  "bugs": {
    "url": "https://github.com/arasheedu/spekai/issues"
  },
  "homepage": "https://github.com/arasheedu/spekai#readme"
}
